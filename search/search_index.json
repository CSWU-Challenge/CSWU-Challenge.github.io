---
layout: null
---
{% assign URL = "" %}
{
    "config":{"lang":["zh-cn"],"prebuild_index":false,"separator":"[\\s\\-]+"},
    "docs":
    [
        {% for page in site.pages %}
        {% unless page.excluded_in_search %}
        {% if added %},
        {% endif %}
        {% assign added = false %}
        {
            "location": "{{ page.path }}", 
            "text": "{{ page.content | strip_html | strip_newlines | slugify: 'ascii' | replace: '-', ' ' }}", 
            "title": "{{ page.title }}"
        }
        {% assign added = true %}
        {% endunless %}{% endfor %}
            
        {% for post in site.posts %}
        {% unless page.excluded_in_search %}
        {% if added %},
        {% endif %}
        {% assign added = false %}
        {
            "location": "{{ post.path }}", 
            "text": "{{ post.content | strip_html | strip_newlines | slugify: 'ascii' | replace: '-',' ' }}", 
            "title": "{{ post.title }}"
        }
        {% assign added = true %}
        {% endunless %}{% endfor %}
            
        {% for wiki in site.wiki %}
        {% unless wiki.excluded_in_search %}
        {% if added %},
        {% endif %}
        {% assign added = false %}
        {
            "location": "{{ wiki.path }}", 
            "text": "{{ wiki.content | strip_html | strip_newlines | slugify: 'ascii' | replace: '-',' ' }}", 
            "title": "{{ wiki.title }}"
        }
        {% assign added = true %}
        {% endunless %}{% endfor %}
    ]
}
